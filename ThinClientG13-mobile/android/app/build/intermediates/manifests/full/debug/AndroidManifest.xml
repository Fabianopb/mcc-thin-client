<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.coboltforge.dontmind.multivnc"
    android:installLocation="auto"
    android:versionCode="42"
    android:versionName="1.6.4" >

    <uses-sdk
        android:minSdkVersion="5"
        android:targetSdkVersion="13" />

    <supports-screens android:anyDensity="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:hardwareAccelerated="true"
        android:icon="@drawable/icon"
        android:label="MultiVNC" >
        <activity
            android:name="com.coboltforge.dontmind.multivnc.MainMenuActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.coboltforge.dontmind.multivnc.VncCanvasActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="vnc" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.coboltforge.dontmind.multivnc.ConnectionListActivity"
            android:label="@string/shortcut_label" >
            <intent-filter>
                <action android:name="android.intent.action.CREATE_SHORTCUT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.coboltforge.dontmind.multivnc.EditBookmarkActivity"
            android:label="@string/editbookmark_title" >
        </activity>
        <activity
            android:name="com.coboltforge.dontmind.multivnc.AboutActivity"
            android:label="@string/about" >
        </activity>
        <activity
            android:name="com.coboltforge.dontmind.multivnc.HelpActivity"
            android:label="@string/help" >
        </activity>

        <service
            android:name="com.coboltforge.dontmind.multivnc.MDNSService"
            android:enabled="true" >
        </service>

        <activity
            android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
    </application>

</manifest>